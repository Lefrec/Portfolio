---
import "../styles/global.css";

import Tab from "./Tab.astro";
import LightSwitch from "./LightSwitch.astro";
import LangSwitch from "./LangSwitch.astro";

const { current, menu } = Astro.props;
---

<header class="py-2">
  <div class="hidden md:flex md:justify-between">
    <nav class="flex gap-1 px-8">
      <Tab on={current === "main"} content="main" link="/" />
      <Tab on={current === "about"} content="about" link="/about" />
      <Tab on={current === "work"} content="work" link="/work" />
      <Tab on={current === "contact"} content="contact" link="/contact" />
    </nav>
    <div class="flex gap-2 px-8 h-fit">
    <LangSwitch/>
    <LightSwitch/>
    </div>
  </div>
  <nav class="flex justify-between gap-1 px-4 md:hidden">
    <Tab
      on={!menu}
      content={current}
      link={current === "main" ? "/" : `/${current}`}
    />
    <Tab
      on={menu}
      content="menu"
      link={menu ? "javascript:history.back()" : `/menu/${current}`}
    />
  </nav>
  <div class="flex bg-main h-[2px] -translate-y-[2px]"></div>
</header>
